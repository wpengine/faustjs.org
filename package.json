{
	"name": "faustjs-org-site",
	"private": true,
	"scripts": {
		"dev": "faust dev",
		"build": "faust build",
		"postbuild": "concurrently \"pnpm build:sitemap\" \"pnpm build:search\"",
		"generate": "faust generatePossibleTypes",
		"stylesheet": "faust generateGlobalStylesheet",
		"start": "faust start",
		"test:format": "prettier . --check",
		"test:lint": "eslint --quiet",
		"test:search": "NODE_ENV=test node --env-file=.env.local ./scripts/smart-search.mjs",
		"build:search": "node ./scripts/smart-search.mjs",
		"build:sitemap": "next-sitemap --config next-sitemap.config.mjs",
		"lint": "eslint --fix",
		"format": "prettier . --write",
		"prepare": "husky"
	},
	"dependencies": {
		"@apollo/client": "^3.13.4",
		"@faustwp/blocks": "^6.1.0",
		"@faustwp/cli": "^3.2.1",
		"@faustwp/core": "^3.2.1",
		"@headlessui/react": "^2.2.0",
		"@heroicons/react": "^2.2.0",
		"@icons-pack/react-simple-icons": "^12.3.0",
		"@jsdevtools/rehype-url-inspector": "^2.0.2",
		"@octokit/core": "^6.1.4",
		"@shikijs/transformers": "^3.2.1",
		"@sindresorhus/slugify": "^2.2.1",
		"@wpengine/atlas-next": "^2.0.1",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"downshift": "^9.0.9",
		"feed": "^4.2.2",
		"graphql": "^16.10.0",
		"http-status-codes": "^2.3.0",
		"lodash.debounce": "^4.0.8",
		"next": "^15.2.4",
		"next-mdx-remote-client": "^2.1.1",
		"next-sitemap": "^4.2.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"rehype-callouts": "^2.0.2",
		"rehype-external-links": "^3.0.0",
		"rehype-pretty-code": "^0.14.1",
		"rehype-slug": "^6.0.0",
		"remark-flexible-toc": "^1.1.1",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-smartypants": "^3.0.2",
		"remark-stringify": "^11.0.0",
		"shiki": "^3.2.1",
		"strip-markdown": "^6.0.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"vfile-matter": "^5.0.1"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.0.14",
		"@tailwindcss/typography": "^0.5.16",
		"concurrently": "^9.1.2",
		"eslint": "^9.22.0",
		"eslint-config-neon": "^0.2.7",
		"eslint-plugin-mdx": "^3.2.0",
		"eslint-plugin-unicorn": "^57.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"next-secure-headers": "^2.2.0",
		"postcss": "^8.5.3",
		"postcss-nesting": "^13.0.1",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.0.14"
	},
	"engines": {
		"node": "^22",
		"npm": "use-pnpm"
	},
	"packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af",
	"lint-staged": {
		"*": "pnpm format",
		"*.{js,jsx}": "pnpm lint"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"sharp"
		],
		"overrides": {
			"eslint-plugin-unicorn": "$eslint-plugin-unicorn",
			"@babel/runtime": "^7.27.0"
		}
	}
}
